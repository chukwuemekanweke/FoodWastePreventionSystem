@model Batch
@{
    ViewBag.Title = "PlaceProductOnAuction";
    Product Product = ViewBag.product;
}

<div class="@TempData["class"]">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    @TempData["msg"]
</div>

<div class="page-title-group">
    <h4 class="page-title">Place product on Auction</h4>
</div>
<div class="cb-page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="card-box">
                    <div class="card-box-head  border-b m-t-0">
                        <h4 class="header-title"><b>Auction Form</b></h4>
                    </div>
                    <div class="card-box-content form-compoenent">
                        @using (Html.BeginForm("PlaceProductOnAuction", "Auction", FormMethod.Post))
                        {
                            <input type="hidden" name="batchId" value="@Model.Id" />
                            <div class="form-group">
                                <label class="control-label col-sm-4 text-left" for="email">Product:</label>
                                <div class="col-sm-8">
                                    <h4>@Product.Name</h4>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4 text-left">Batch Id:</label>
                                <div class="col-sm-8">
                                    <h4>@Model.Id</h4>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4 text-left">Purchase Price</label>
                                <div class="col-sm-8">
                                    <h4>@Model.PurchasePrice</h4>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4 text-left">Current Price</label>
                                <div class="col-sm-8">
                                    <h4>@Model.SellingPrice</h4>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4 text-left">Auction Price</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" placeholder="Enter auction price" name="auctionPrice">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-offset-4 col-sm-10">
                                    <button type="submit" class="btn btn-pink btn-md">Submit</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
