
@{
    ViewBag.Title = "SortByStores";
}


<div class="panel panel-default col-md-6 col-md-offset-3">
    <div class="panel-heading text-center">
        <h5>Sort Products By Store</h5>
    </div>
    <div class="panel-body">
        @using (Ajax.BeginForm("ProductsByStore","CustomerHome",null,new AjaxOptions() {
            InsertionMode=InsertionMode.Replace,
            UpdateTargetId="table",
            HttpMethod="get",
            
        }, new { @class="form-horizontal"}))
        {
        <div class="form-group">
            <label class="control-label">Store</label>
            @Html.DropDownList("id", (List<SelectListItem>)ViewBag.stores, "Select Store", new { @class = "form-control" })
        </div>
        <div class="form-group ">
            <input type="submit" class="btn btn-primary" value="Query" />
        </div>
            }
        </div>
</div>

<div id="table"></div>

